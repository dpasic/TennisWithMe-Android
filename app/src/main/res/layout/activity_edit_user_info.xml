<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_edit_user_info"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="hr.vspr.dpasic.tenniswithme.activity.EditUserInfoActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            style="@style/FormLabel"
            android:text="@string/name_lbl" />

        <EditText
            android:id="@+id/et_name"
            style="@style/FormEditContent"
            tools:text="Đani" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            style="@style/FormLabel"
            android:text="@string/surname_lbl" />

        <EditText
            android:id="@+id/et_surname"
            style="@style/FormEditContent"
            tools:text="Pašić" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            style="@style/FormLabel"
            android:text="@string/email_lbl" />

        <EditText
            android:id="@+id/et_email"
            style="@style/FormEditContent"
            tools:text="djani@mail.com" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            style="@style/FormLabel"
            android:text="@string/gender_lbl" />

        <EditText
            android:id="@+id/et_gender"
            style="@style/FormEditContent"
            tools:text="Male" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            style="@style/FormLabel"
            android:text="@string/age_lbl" />

        <EditText
            android:id="@+id/et_age"
            style="@style/FormEditContent"
            tools:text="23" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            style="@style/FormLabel"
            android:text="@string/summary_lbl" />

        <EditText
            android:id="@+id/et_summary"
            style="@style/FormEditContent"
            android:ellipsize="end"
            android:lines="3"
            tools:text="I'm former tennis player." />
    </LinearLayout>

    <Button
        android:id="@+id/btn_save_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/save_profile" />
</LinearLayout>
