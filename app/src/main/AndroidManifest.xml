<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="hr.vspr.dpasic.tenniswithme">

    <!-- To auto-complete the email text field in the login form with the player's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".DbFlowApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activity.LoginActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.RegisterActivity" />
        <activity
            android:name=".activity.MainActivity"
            android:label="@string/title_activity_main"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activity.EditUserInfoActivity"
            android:label="@string/title_edit_user_info" />
        <activity
            android:name=".activity.FriendRequestActivity"
            android:label="@string/title_request_friendship" />
        <activity
            android:name=".activity.UserInfoActivity"
            android:label="@string/title_user_info" />
        <activity
            android:name=".activity.MatchInfoActivity"
            android:label="@string/title_match_info" />
        <activity
            android:name=".activity.EditMatchInfoActivity"
            android:label="@string/title_edit_match_info" />
        <activity
            android:name=".activity.RequestMatchActivity"
            android:label="@string/title_request_match" />
    </application>

</manifest>